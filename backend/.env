# =============================================================================
# VILLAGE COMPLAINT MANAGEMENT SYSTEM - BACKEND ENVIRONMENT VARIABLES
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MySQL Database Host (default: localhost)
DB_HOST=localhost

# MySQL Database User (default: root)
DB_USER=root

# MySQL Database Password (REQUIRED - change this to your actual MySQL password)
DB_PASSWORD=your_mysql_password_here

# MySQL Database Name (default: village_complaint_db)
DB_NAME=village_complaint_db

# MySQL Database Port (default: 3306)
DB_PORT=3306

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
# JWT Secret Key (REQUIRED - change this to a secure random string)
# Minimum 32 characters recommended for production
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long_change_this_in_production

# JWT Token Expiration Time (default: 24h)
# Options: 1h, 24h, 7d, 30d, etc.
JWT_EXPIRES_IN=24h

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Server Port (default: 5000)
PORT=5000

# Node Environment (development/production)
NODE_ENV=development

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
# Maximum file size in bytes (default: 5MB)
# 5MB = 5 * 1024 * 1024 = 5242880 bytes
MAX_FILE_SIZE=5242880

# Upload directory path (default: ./uploads/)
UPLOAD_PATH=./uploads/

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
# Rate limiting window in milliseconds (default: 15 minutes)
# 15 minutes = 15 * 60 * 1000 = 900000 milliseconds
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window (default: 100 requests per 15 minutes)
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# CORS Origins (comma-separated list)
# Add your frontend URLs here for production
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# =============================================================================
# EMAIL CONFIGURATION (Optional - for future email notifications)
# =============================================================================
# SMTP Host (for email notifications)
# SMTP_HOST=smtp.gmail.com

# SMTP Port (for email notifications)
# SMTP_PORT=587

# SMTP User (for email notifications)
# SMTP_USER=your_email@gmail.com

# SMTP Password (for email notifications)
# SMTP_PASSWORD=your_app_password

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log Level (debug, info, warn, error)
LOG_LEVEL=debug

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Enable detailed error messages in development
# Set to false in production
SHOW_ERROR_DETAILS=true